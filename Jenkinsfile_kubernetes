node {

    checkout scm

    docker.withRegistry('https://registry.hub.docker.com', 'DOCKER_HUB') {

        def customImage = docker.build('ilhamv/dockerwebapp')

        /* Push the container to the custom Registry */
        customImage.push()
    }
}

pipeline {
    agent any
    stages {
        stage ('build') {
            steps {
                echo "Build App"
                echo "$BUILD_NUMBER"
                sleep (5)
            }
        }
    }
}
